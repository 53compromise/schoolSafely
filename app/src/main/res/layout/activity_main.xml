<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ECbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#E20505"
        android:text="@string/emergency_contacts"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556" />

    <Button
        android:id="@+id/PROTOCOLbutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:text="Protocols"
        android:textColor="#FCFCFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="445dp" />

    <Button
        android:id="@+id/SHAREbutton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Share"
        android:textColor="#F7F7FA"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="572dp" />

    <Button
        android:id="@+id/SETTINGbutton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Settings"
        android:textColor="#F5F4F4"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="572dp" />

    <Button
        android:id="@+id/WEATHERbutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textColor="#FDFBFB"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="509dp" />
</androidx.constraintlayout.widget.ConstraintLayout>